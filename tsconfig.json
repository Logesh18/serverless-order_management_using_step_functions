{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es2017",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "rootDir": "./",
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true
  },
  "include": [
    "**/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
    "**/*.spec.ts"
  ]
}
